<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>unit-gen</AssemblyName>
        <LangVersion>10</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\Templates.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Templates.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <None Remove="Data\UnitType.csv" />
      <EmbeddedResource Include="Data\UnitTypes.csv" />
      <None Remove="Data\system.csv" />
      <EmbeddedResource Include="Data\Systems.csv" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="CsvHelper" Version="30.0.1" />
    </ItemGroup>
    
    <ItemGroup>
      <Compile Update="Resources\Templates.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Templates.resx</DependentUpon>
      </Compile>
    </ItemGroup>
    
    <ItemGroup>
      <None Remove="Resources\Unit.template" />
      <EmbeddedResource Include="Resources\UnitType.template" />
    </ItemGroup>
    
    <ItemGroup>
      <None Remove="Data\prefixes.csv" />
      <EmbeddedResource Include="Data\Prefixes.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
      <None Remove="Data\units.csv" />
      <EmbeddedResource Include="Data\Units.csv" />
    </ItemGroup>

</Project>
